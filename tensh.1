<script>
    // タブ切り替え
    const searchTabs = document.querySelectorAll('.search-tab');
    searchTabs.forEach(tab => {
        tab.addEventListener('click', () => {
            searchTabs.forEach(t => t.classList.remove('active'));
            tab.classList.add('active');
            
            const tabType = tab.dataset.tab;
            const searchButton = document.querySelector('.search-button');
            if (tabType === 'career') {
                searchButton.textContent = '💼 転職相談を申し込む';
            } else {
                searchButton.textContent = '🔍 求人を検索する';
            }
        });
    });

    // フィルター機能
    const filterBtns = document.querySelectorAll('.filter-btn');
    const jobCards = document.querySelectorAll('.job-card');

    filterBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            filterBtns.forEach(b => b.classList.remove('active'));
            btn.classList.add('active');

            const filter = btn.dataset.filter;
            jobCards.forEach(card => {
                if (filter === 'all') {
                    card.style.display = 'block';
                } else {
                    const categories = card.dataset.category || '';
                    card.style.display = categories.includes(filter) ? 'block' : 'none';
                }
            });
        });
    });

    // 検索フォーム
    document.querySelector('.search-form').addEventListener('submit', (e) => {
        e.preventDefault();
        const searchButton = document.querySelector('.search-button');
        const originalText = searchButton.textContent;
        searchButton.textContent = '🔍 検索中...';
        searchButton.style.background = 'linear-gradient(135deg, #95a5a6, #7f8c8d)';
        
        setTimeout(() => {
            searchButton.textContent = originalText;
            searchButton.style.background = 'linear-gradient(135deg, #e74c3c, #c0392b)';
            alert('検索結果を表示しました。実際の実装では、条件に合った求人が表示されます。');
        }, 1500);
    });

    // 統計のカウントアップ
    const countUpNumbers = () => {
        const statNumbers = document.querySelectorAll('.stat-number');
        statNumbers.forEach(num => {
            const target = parseInt(num.dataset.count);
            let current = 0;
            const increment = target / 100;
            
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    current = target;
                    clearInterval(timer);
                }
                num.textContent = Math.floor(current);
            }, 30);
        });
    };

    // 統計セクションが見えたときにカウントアップ開始
    const statsSection = document.querySelector('.stats-section');
    const statsObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                countUpNumbers();
                statsObserver.unobserve(entry.target);
            }
        });
    });
    
    if (statsSection) {
        statsObserver.observe(statsSection);
    }

    // スクロールアニメーション
    const observeElements = document.querySelectorAll('.fade-in');
    
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('visible');
            }
        });
    }, { threshold: 0.1 });
    
    observeElements.forEach(el => {
        observer.observe(el);
    });

    // 求人カードのアクション
    document.querySelectorAll('.btn-primary').forEach(btn => {
        btn.addEventListener('click', () => {
            alert('応募フォームに移動します。実際の実装では、応募手続きページが表示されます。');
        });
    });

    document.querySelectorAll('.btn-secondary').forEach(btn => {
        btn.addEventListener('click', () => {
            if (btn.style.background === 'rgb(39, 174, 96)') {
                btn.style.background = 'transparent';
                btn.style.color = '#27ae60';
                btn.innerHTML = '💾';
                alert('お気に入りから削除しました');
            } else {
                btn.style.background = '#27ae60';
                btn.style.color = 'white';
                btn.innerHTML = '❤️';
                alert('お気に入りに追加しました');
            }
        });
    });

    // スムーススクロール
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });

    // ナビゲーションバーの背景変更
    window.addEventListener('scroll', () => {
        const nav = document.querySelector('.nav');
        if (window.scrollY > 100) {
            nav.style.background = 'rgba(255, 255, 255, 0.98)';
            nav.style.boxShadow = '0 2px 20px rgba(0,0,0,0.1)';
        } else {
            nav.style.background = 'rgba(255, 255, 255, 0.95)';
            nav.style.boxShadow = 'none';
        }
    });
</script>
